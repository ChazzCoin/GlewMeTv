<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="false"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgAuthor"
            android:layout_width="23dp"
            android:layout_height="25dp"
            app:srcCompat="@drawable/outline_edit_24"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="10dp" />

        <ImageView
            android:id="@+id/imgCalendar"
            android:layout_width="38dp"
            android:layout_height="48dp"
            app:layout_constraintEnd_toStartOf="@+id/txtPublishedDate"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/calendar_light" />

        <TextView
            android:id="@+id/txtSource"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:text="source"
            android:textColor="@color/colorAccent"
            android:textSize="13sp"
            tools:layout_editor_absoluteX="15dp"
            tools:layout_editor_absoluteY="230dp" />

        <TextView
            android:id="@+id/txtPublishedDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:text="published_date"
            android:textColor="@color/colorAccent"
            tools:layout_editor_absoluteX="300dp"
            tools:layout_editor_absoluteY="14dp" />

        <TextView
            android:id="@+id/txtAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:text="author"
            android:textColor="@color/colorAccent"
            tools:layout_editor_absoluteX="39dp"
            tools:layout_editor_absoluteY="14dp" />

        <ImageView
            android:id="@+id/imgUrl"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtAuthor"
            app:srcCompat="@drawable/glewmetv" />

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:lines="2"
            android:maxLines="5"
            android:text="This is a random title to an article!"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.551"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="263dp" />

        <TextView
            android:id="@+id/txtArticleBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="uhiuhiuhiuhiuhiuhiuhiuhiuhiuhiuhiuhiuhiuhiuuhiuhiuhiuhiuhiuhiuhiuhiuhiuhiuhiuhiuhiuhiuuhiuhiuhiuhiuhiuhiuhiuhiuhiuhiuhiuhiuhiuhiuuhiuhiuhiuhiuhiuhiuhiuhiuhiuhiuhiuhiuhiuhiuuhiuhiuhiuhiuhiuhiuhiuhiuhiuhiuhiuhiuhiuhiu"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="326dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>

